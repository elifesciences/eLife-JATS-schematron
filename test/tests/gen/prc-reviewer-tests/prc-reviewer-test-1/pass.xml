    <front>
      <article-meta>
        <custom-meta-group>
          <custom-meta specific-use="meta-only">
            <meta-name>publishing-route</meta-name>
            <meta-value>prc</meta-value>
          </custom-meta>
        </custom-meta-group>
      </article-meta>
    </front>
    <sub-article>
      <front-stub>
        <contrib-group>
          <contrib contrib-type="author">
            <anonymous/>
            <role specific-use="referee">Reviewer</role>
          </contrib>
        </contrib-group>
      </front-stub>
    </sub-article>
  </article>
